<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="ScreenAbout" parent="@style/ScreenBase">
        <item name="android:padding">0dp</item>
    </style>
    
    <style name="UpperLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/AzulEscuro4</item>
    </style>

    <style name="DownLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="AboutFrase">
        <item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">@color/CinzaClaro</item>
		<item name="android:gravity">center</item>
    </style>
    
</resources>